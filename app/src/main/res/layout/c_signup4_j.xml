<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_back"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_35sdp">

        <RelativeLayout
            android:id="@+id/layout0"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New\nAccount"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_26ssp"
                android:textColor="#000000"
                android:fontFamily="@font/arial_bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_step_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#000000"
                    android:fontFamily="@font/arial_bold" />

                <TextView
                    android:id="@+id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:layout_alignBottom="@+id/tv_step_count"
                    android:layout_toRightOf="@+id/tv_step_count"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/_3sdp"
                    android:fontFamily="@font/arial"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_alignBottom="@+id/tv_step_count"
                    android:layout_toRightOf="@+id/tv_text1"
                    android:textColor="#000000"
                    android:paddingBottom="@dimen/_3sdp"
                    android:fontFamily="@font/arial_bold"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STEPS"
                    android:layout_below="@+id/tv_step_count"
                    android:textColor="#000000"
                    android:fontFamily="@font/arial_bold"
                    android:textSize="@dimen/_8ssp" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please upload your resume. We will use to find the right opportunities for you."
            android:textColor="#80000000"
            android:fontFamily="@font/arial"
            android:layout_below="@+id/layout0"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11ssp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_text"
            android:layout_above="@+id/layout_terms"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <ImageView
                android:id="@+id/iv_upload_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/resume_upload"/>

            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_above="@+id/tv_resume"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="resume.pdf"
                android:visibility="gone"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/tv_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Resume"
                android:textSize="@dimen/_12ssp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:background="@drawable/button_green_solid" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:text="Finish"
            android:paddingBottom="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:visibility="invisible"
            android:enabled="false"
            android:fontFamily="@font/arial_bold"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_black_solid_shadow" />

        <RelativeLayout
            android:id="@+id/layout_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_signup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#80000000"
                android:text="By signing up, you agree to our"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/_11ssp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_text"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/arial"
                    android:text="terms &amp; conditions"
                    android:textColor="#0B7FFA"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:layout_toRightOf="@+id/tv_terms"
                    android:fontFamily="@font/arial"
                    android:textColor="#80000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="privacy policy"
                    android:layout_toRightOf="@+id/tv_text"
                    android:fontFamily="@font/arial"
                    android:textColor="#0B7FFA"
                    android:textSize="@dimen/_11ssp" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/pcircle"
        app:indicatorColor="#0B7FFA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:indicatorName="LineScaleIndicator" />

</RelativeLayout>