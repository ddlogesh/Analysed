<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_white_solid_shadow_corner">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_cancel" />

    <RelativeLayout
        android:paddingTop="@dimen/_7sdp"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_task1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textStyle="bold"
            android:background="@drawable/text_bg_pink_curve_less_corner"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#FF518ADB"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_task"
            android:text="Description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textStyle="bold"
            android:background="@drawable/text_bg_pink_curve_less_corner"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#FF518ADB"
            android:textSize="@dimen/_12ssp"/>

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_below="@+id/tv_description"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task ID"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_id1"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/text_bg_pink_curve_less_corner"
                        android:layout_centerHorizontal="true"

                        android:textStyle="bold"
                        android:textColor="#FF518ADB"
                        android:textSize="@dimen/_12ssp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_duration1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_duration1"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/text_bg_pink_curve_less_corner"
                        android:layout_centerHorizontal="true"

                        android:textColor="#FF518ADB"
                        android:textSize="@dimen/_12ssp"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_deadline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"/>

                    <TextView
                        android:id="@+id/tv_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_deadline1"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/text_bg_pink_curve_less_corner"

                        android:textStyle="bold"
                        android:textColor="#FF518ADB"
                        android:textSize="@dimen/_12ssp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ways1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout0"
            android:text="Ways of doing task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_ways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ways1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textStyle="bold"
            android:background="@drawable/text_bg_pink_curve_less_corner"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#FF518ADB"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ways"
            android:text="Hint for doing task"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textStyle="bold"
            android:background="@drawable/text_bg_pink_curve_less_corner"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#FF518ADB"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_posted_by1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint"
            android:text="Posted by"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_posted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_posted_by1"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textStyle="bold"
            android:background="@drawable/text_bg_pink_curve_less_corner"
            android:layout_marginTop="@dimen/_3sdp"
            android:textColor="#FF518ADB"
            android:textSize="@dimen/_12ssp"/>

    </RelativeLayout>

</RelativeLayout>