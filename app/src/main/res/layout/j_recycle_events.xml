<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bg"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_250sdp"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/text_bg_dark_violet_curve_less_corner_fill">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_1sdp"
        android:src="@drawable/background_gradient"
        android:background="@drawable/button_white_solid_less_corner"/>

    <TextView
        android:id="@+id/tv_event_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:background="@drawable/button_very_light_white_solid"
        android:textSize="@dimen/_8ssp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_3sdp"
        android:paddingRight="@dimen/_3sdp"
        android:paddingTop="@dimen/_1sdp"
        android:paddingBottom="@dimen/_1sdp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_pic"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event 1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_venue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tv_title"
            android:text="Venue"
            android:layout_centerHorizontal="true"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp"/>

        <TextView
            android:id="@+id/tv_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_below="@+id/tv_venue1"
            android:text="Chenai"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tv_organiser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tv_venue"
            android:text="Organiser Email"
            android:layout_centerHorizontal="true"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp"/>

        <TextView
            android:id="@+id/tv_organiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_below="@+id/tv_organiser1"
            android:text="dd@gmail.com"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tv_event_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tv_organiser"
            android:text="Event Date"
            android:layout_centerHorizontal="true"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp"/>

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_below="@+id/tv_event_date1"
            android:text="Today"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/tv_booking_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_below="@+id/tv_event_date"
            android:text="Booking Date"
            android:layout_centerHorizontal="true"
            android:textColor="#CCFFFFFF"
            android:textSize="@dimen/_8ssp"/>

        <TextView
            android:id="@+id/tv_booking_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_below="@+id/tv_booking_date1"
            android:text="23 Jun, Sun"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_10ssp"/>

    </RelativeLayout>

</RelativeLayout>