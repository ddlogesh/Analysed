<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp">

    <ImageView
        android:id="@id/iv_profile_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/sample_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/iv_profile_image">

        <TextView
            android:id="@id/tv_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@id/iv_cancel"
            android:singleLine="true"
            android:text="Logesh D"
            android:textColor="#ff000000"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_full_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@id/tv_access"
            android:singleLine="true"
            android:text="logesh@analysed.com"
            android:textColor="#ff7e7878"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_6sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_cancel" />

        <TextView
            android:id="@+id/tv_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_full_name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="@dimen/_10ssp" />
    </RelativeLayout>

    <View
        android:id="@id/v_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_toRightOf="@id/tv_first_name"
        android:background="#2c000000" />
</RelativeLayout>