<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_bg"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/text_bg_dark_violet_curve_less_corner_fill">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_1sdp"
        android:background="@drawable/button_white_solid_less_corner"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_pic"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task 1"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16ssp"/>

        <RelativeLayout
            android:id="@+id/layout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tv_title">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Task analysis is the analysis of how a task is accomplished, including a detailed description of both manual and mental activities"
                android:layout_centerHorizontal="true"
                android:background="@drawable/text_bg_grey"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp"/>

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/pb_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_alignBottom="@+id/tv_desc"
                app:rcProgress="50"
                app:rcMax="100"
                app:rcRadius="@dimen/_10sdp"
                app:rcBackgroundPadding="0dp"
                app:rcReverse="false"
                app:rcProgressColor="#00FF04"
                app:rcBackgroundColor="#AF9A9A" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_below="@+id/layout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:text="Count: 5"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12ssp"/>

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_count"
            android:text="LIVE"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:background="@drawable/text_bg_green_curve_less_width"/>

    </RelativeLayout>

</RelativeLayout>