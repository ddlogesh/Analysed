<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <RelativeLayout
        android:id="@id/layout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/iv_home"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:layout_toRightOf="@+id/iv_home"
            android:text="Resume Sorting Tool"
            android:textColor="#000000"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_text1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/button_white_solid">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@id/layout11"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/text_bg_blue_curve">

                            <EditText
                                android:id="@+id/ev_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/text_bg_pink_curve_less_corner_fill"
                                android:gravity="center"
                                android:hint="Java"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:singleLine="true"
                                android:textColor="#ff000000"
                                android:textSize="@dimen/_12ssp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_card11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ev_text1"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:orientation="horizontal" />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_card1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout11"
                            android:layout_marginTop="@dimen/_7sdp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/button_blue_solid"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Skills"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@id/tv_search_card1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/search_button"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_text2"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/button_white_solid">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/layout22"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/text_bg_blue_curve">

                            <EditText
                                android:id="@+id/ev_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/text_bg_pink_curve_less_corner_fill"
                                android:gravity="center"
                                android:hint="M.Sc"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:singleLine="true"
                                android:textColor="#ff000000"
                                android:textSize="@dimen/_12ssp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_card22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ev_text2"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp" />
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_card2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout22"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@id/tv_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_blue_solid"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Qualification"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_search_card2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/search_button"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_text3"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/button_white_solid">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/layout33"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/text_bg_blue_curve">

                            <EditText
                                android:id="@+id/ev_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/text_bg_pink_curve_less_corner_fill"
                                android:gravity="center"
                                android:hint="1 month"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:singleLine="true"
                                android:textColor="#ff000000"
                                android:textSize="@dimen/_12ssp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_card33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ev_text3"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp" />
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_card3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout33"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_blue_solid"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Experience"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_search_card3"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/search_button"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_text4"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/button_white_solid">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/layout44"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/text_bg_blue_curve">

                            <EditText
                                android:id="@+id/ev_text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:background="@drawable/text_bg_pink_curve_less_corner_fill"
                                android:gravity="center"
                                android:hint="Kerala"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:singleLine="true"
                                android:textColor="#ff000000"
                                android:textSize="@dimen/_12ssp" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_card44"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ev_text4"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp" />
                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_card4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout44"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_blue_solid"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Location"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_search_card4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/search_button"
                    android:gravity="center" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>