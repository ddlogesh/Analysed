<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:id="@id/layout_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:id="@id/iv_cancel"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_cancel_white" />

            <TextView
                android:id="@id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_cancel"
                android:text="Cancel"
                android:textColor="#ffffffff"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_code0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_70sdp"
            android:background="#ffffffff"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/tv_refer_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="ABC124"
                android:textColor="#ff000000"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tap_to_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_refer_code"
                android:layout_centerHorizontal="true"
                android:text="Tap to copy"
                android:textColor="#ff949090"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentBottom="true"
            android:background="#ffffffff">

            <TextView
                android:id="@id/tv_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Share to"
                android:textColor="#ff000000"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_share_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/iv_app1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:id="@+id/tv_app1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app1"
                    android:gravity="center"
                    android:text="Facebook"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:id="@+id/iv_app2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/iv_app1"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:id="@+id/tv_app2"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app2"
                    android:gravity="center"
                    android:layout_alignLeft="@+id/iv_app2"
                    android:text="Whatsapp"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:id="@+id/iv_app3"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/iv_app2"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:id="@+id/tv_app3"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app3"
                    android:layout_alignLeft="@+id/iv_app3"
                    android:gravity="center"
                    android:text="Twitter"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:id="@+id/iv_app4"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/iv_app3"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:id="@+id/tv_app4"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app4"
                    android:layout_alignLeft="@+id/iv_app4"
                    android:gravity="center"
                    android:text="Gmail"
                    android:textSize="@dimen/_8ssp" />

                <ImageView
                    android:id="@+id/iv_app5"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_toRightOf="@+id/iv_app4"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:id="@+id/tv_app5"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_app5"
                    android:layout_alignLeft="@+id/iv_app5"
                    android:gravity="center"
                    android:text="More"
                    android:textSize="@dimen/_8ssp" />
            </RelativeLayout>

            <TextView
                android:id="@id/tv_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_no_charge"
                android:layout_centerHorizontal="true"
                android:text="Invite Contacts"
                android:textColor="#ff458ddf"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="You will not charged for sms"
                android:textColor="#ff949090"
                android:textSize="@dimen/_9ssp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layout_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/button_white_solid"
        android:visibility="gone">

        <RelativeLayout
            android:id="@id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <TextView
                android:id="@id/tv_close_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/close_button" />

            <TextView
                android:id="@+id/tv_invite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Invite Contacts"
                android:textColor="#ff518adb"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <View
            android:id="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/layout0"
            android:background="#ffcccccc" />

        <RelativeLayout
            android:id="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <CheckBox
                android:id="@+id/ck_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Select All"
                android:textColor="#ff518adb" />

            <TextView
                android:id="@+id/tv_all_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="All Contacts"
                android:textColor="#ff948f8f"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <View
            android:id="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/layout1"
            android:background="#ffcccccc" />

        <ListView
            android:id="@+id/list_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_login"
            android:layout_below="@id/layout1"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:divider="@null"
            android:dividerHeight="@dimen/_5sdp" />

        <View
            android:id="@id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/list_contact"
            android:background="#ffcccccc" />

        <TextView
            android:id="@id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/button_blue_gradient"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Invite"
            android:textColor="#ffffffff"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>
</RelativeLayout>