<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".resumeSortingTool">

    <RelativeLayout
        android:id="@+id/layout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_34sdp"
            android:src="@drawable/profile_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume Sorting Tool"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_home"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/_3sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/resume_search_button"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout0"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/resume_blue_card">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#ffffff"/>
                    <EditText
                        android:id="@+id/ev_text1"
                        android:layout_below="@+id/tv_title1"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:hint="Choose your skill set"
                        android:textColor="#ffffff"
                        android:textColorHint="#41FFFFFF"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="top"
                        android:background="@drawable/resume_card_bg"/>
                    <RelativeLayout
                        android:layout_below="@+id/ev_text1"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Java"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text1"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="C"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text2"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Android"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text3"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="HTML"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text4"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="JS"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text5"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="CSS"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/resume_red_card">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qualification"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#ffffff"/>
                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_below="@+id/tv_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/ev_text2"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:hint=""
                            android:textColor="#ffffff"
                            android:textColorHint="#41FFFFFF"
                            android:layout_height="@dimen/_50sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:textSize="@dimen/_14ssp"
                            android:gravity="top"
                            android:background="@drawable/resume_card_bg"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp">
                            <TextView
                                android:id="@+id/tv_choice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ECE"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/resume_white_button"/>
                            <TextView
                                android:id="@+id/tv_choice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="B.E"
                                android:layout_toEndOf="@+id/tv_choice1"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:background="@drawable/resume_white_button"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_below="@+id/layout2"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSE"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text7"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="IT"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text8"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="B.Tech"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text9"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="B.Sc"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/resume_yellow_card">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#ffffff"/>
                    <EditText
                        android:id="@+id/ev_text3"
                        android:layout_below="@+id/tv_title3"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:hint="Choose your experience"
                        android:textColorHint="#41FFFFFF"
                        android:textColor="#ffffff"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="top"
                        android:background="@drawable/resume_card_bg"/>
                    <RelativeLayout
                        android:layout_below="@+id/ev_text3"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_text11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 months"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text11"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="6 months"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text12"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="1 year"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text13"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="2 years"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/resume_cyan_card">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#ffffff"/>
                    <EditText
                        android:id="@+id/ev_text4"
                        android:layout_below="@+id/tv_title4"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:hint="Choose your location"
                        android:textColorHint="#41FFFFFF"
                        android:textColor="#ffffff"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textSize="@dimen/_14ssp"
                        android:gravity="top"
                        android:background="@drawable/resume_card_bg"/>
                    <RelativeLayout
                        android:layout_below="@+id/ev_text4"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_text15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hyderabad"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text15"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Pune"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text16"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Chennai"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                        <TextView
                            android:id="@+id/tv_text18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/tv_text17"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Delhi"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:background="@drawable/resume_white_button"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>