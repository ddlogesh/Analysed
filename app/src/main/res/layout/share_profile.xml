<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <RelativeLayout
        android:id="@+id/layout_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_255sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/button_white_solid">

        <RelativeLayout
            android:id="@id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_close_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/close_button" />

            <TextView
                android:id="@+id/tv_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Share Profile"
                android:textColor="#ff518adb"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

        <View
            android:id="@id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/layout0"
            android:background="#ffcccccc" />

        <RelativeLayout
            android:id="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:background="#ffeeeeee">

            <RelativeLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/search_edit_text_back">

                <EditText
                    android:id="@id/ev_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_29sdp"
                    android:layout_marginRight="@dimen/_45sdp"
                    android:background="#00000000"
                    android:hint="Name or Email"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textColorHint="#24000000" />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:src="@drawable/profile_apply_icon" />
            </RelativeLayout>

            <ListView
                android:id="@+id/list_people"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_below="@id/layout_search"
                android:layout_marginBottom="@dimen/_3sdp"
                android:divider="@null"
                android:dividerHeight="@dimen/_5sdp"
                android:scrollbars="none" />
        </RelativeLayout>

        <View
            android:id="@id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/layout1"
            android:background="#ffcccccc" />

        <TextView
            android:id="@+id/tv_get_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Or get sharable link"
            android:textColor="#69675b5b"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_copy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/button_blue_gradient"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="Copy link"
            android:textColor="#ffffffff"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
</RelativeLayout>