<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:text="A Virtual Recruitment Platform"
        android:textColor="#ffffffff"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_img1" />

    <ImageView
        android:id="@+id/iv_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_img2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_img3"
        android:visibility="gone" />

    <ImageView
        android:id="@id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/splash_next_button" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_35sdp">

        <ImageView
            android:id="@id/iv_tab1"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/button_white_solid" />

        <ImageView
            android:id="@id/iv_tab2"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_toRightOf="@+id/iv_tab1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/button_very_light_white_solid" />

        <ImageView
            android:id="@id/iv_tab3"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_4sdp"
            android:layout_toRightOf="@+id/iv_tab2"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/button_very_light_white_solid" />
    </RelativeLayout>
</RelativeLayout>